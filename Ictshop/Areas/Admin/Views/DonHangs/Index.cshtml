@model IEnumerable<Ictshop.Models.Donhang>

                          @{
                              ViewBag.Title = "Index";
                              Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
                          }
                    

                          <h2>Danh sách đơn hàng</h2>


                          <table class="table">
                              <tr>
                                  <th>
                                      Mã đơn
                                  </th>
                                  <th>
                                      Họ tên
                                  </th>
                                  <th>
                                      Địa chỉ
                                  </th>
                                  <th>
                                     Số điện thoại
                                  </th>
                                  <th>
                                      Ngày đặt
                                  </th>
                                  <th>
                                      Tình trạng đơn hàng
                                  </th>
                                  <th> Mã người dùng</th>
                                  <th></th>
                              </tr>

                              @foreach (var item in Model)
                              {
                                  <tr>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Madon)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Nguoidung.Hoten)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Nguoidung.Diachi)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Nguoidung.Dienthoai)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Ngaydat)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.Tinhtrang)
                                      </td>
                                      <td>
                                          @Html.DisplayFor(modelItem => item.MaNguoidung)
                                      </td>
                                     
                                      <td>
                                        
                                              @Html.ActionLink("Sửa", "Edit", new { id = item.Madon })|
                                              @Html.ActionLink("Chi tiết", "Details", new { id = item.Madon })|
                                         
                                              @Html.ActionLink("Xóa", "Delete", new { id = item.Madon })
                                       

                                      </td>
                                  </tr>
                              }

                          </table>


