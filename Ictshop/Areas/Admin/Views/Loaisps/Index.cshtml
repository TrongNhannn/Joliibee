@model IEnumerable<Ictshop.Models.Hedieuhanh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý loại sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới loại sp", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã loại Sp
        </th>
        <th>
            Tên Sp
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Maloai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tenloai)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.Maloai }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Maloai }) |
        @Html.ActionLink("Xóa ", "Delete", new { id = item.Maloai })
    </td>
</tr>
}

</table>
