<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel=" stylesheet" href="~/Content/Style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @using Ictshop.Models

    <style type="text/css">
        body{
            background-color:#F0F0F0;
        }
        .navbar-inverse {
            background-color: #CC0000;
            border-color: #39B54A;
        }

        .top_header {
            background-color: black;
            padding-left: 110px;
            color: white;
        }

        .form-inline {
            float: right;
            padding-top: 10px;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
 
            font-size: x-large;
        }

        .navbar-inverse .navbar-brand {
            color: white;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;

            font-size: large;
        }

        .navbar-inverse .navbar-nav > li > a:hover {
            color: black;
            }

        .navbar-brand {
            color: cadetblue;
        }
        .spnoibat{
            background-color:white;
     
    
}
        .spnoibat h3 {
         
            padding-left:30px;
            
}
        .giohang{
            color:white;
        }
    </style>



</head>

<body>

    @{ 
         var u = Session["use"] as Ictshop.Models.Nguoidung;
    }

    <div class="navbar navbar-inverse navbar-fixed-top">

        

      
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="navbar-brand" src="~/HinhanhSP/logo.png" width="50" height="50" style="padding:0"  />
                
                @Html.ActionLink(" Trang chủ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                

            </div>
         
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    
                   
                   
                    <li>
                        <a 
                           class="nav-link" 
                           href="@Url.Action("Index", "DonHangs")">Đơn hàng</a>
                    </li>
                    <li>
                      
                        
                           @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                          
                           
                    </li>
                    <li>
                        <a href="/Tintucs/Index" title="tin">
                            @*<span><i class="fas fa-headphones"></i></span>*@
                            <span>Tin tức</span>
                        </a>
                        
                    </li>
                    <li>
                        <a href="/Home/Contact" title="LIENHE">
                            @*<span><i class="fas fa-headphones"></i></span>*@
                            <span>Liên hệ</span>
                        </a>
                    </li>
                   
                   @{
                    if(u != null){
                
                        <div class="col-sm-4 col-md-0" style="color:white">
                            Xin chào : @u.Email
                            &nbsp;
                          
                            <a style="color:white" href="/User/DangXuat">Logout</a>
                        </div>
                   
                    }else{
                    <li>
                        <a href="/User/Dangnhap"> Đăng nhập</a>
                        @*<span><i class="fas fa-headphones"></i></span>*@


                    </li>
                    <li>
                        <a href="/User/Dangky"> Đăng ký</a>
                    </li>
                    }
                    }
                </ul>
            </div>

        </div>
        </div>


    <br>

   
        @RenderBody()
        
        <footer class="bg-info">
            
           
            <center> <p class="bg-primary">&copy; @DateTime.Now.Year - Nhóm NTH</p></center>
        </footer>
 


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
