
<div class="row">
    <div class=" bg-danger"><h3 style="padding-left:20px"> Mì ý sốt bò hầm </h3></div>
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                <img src=@Url.Content("~/HinhanhSP/"+item.Anhbia) class="img-responsive" alt=""  />
            </a>
            <center>
                <h3>@item.Tensp</h3>
                <h3 style="color:red">Giá: @item.Giatien đ</h3>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" value="Thêm vào giỏ" id="bgnGioHang" />

                }
                @*<a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a>*@
            </center>
        </div>
    }
